<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PinActivity"
    android:layout_marginTop="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp"
        android:text="@string/enter_pin"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp">

        <TextView
            android:id="@+id/placeholder1"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/shape"/>

        <TextView
            android:id="@+id/placeholder2"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/shape"/>

        <TextView
            android:id="@+id/placeholder3"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/shape"/>

        <TextView
            android:id="@+id/placeholder4"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/shape"/>

        <TextView
            android:id="@+id/placeholder5"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:background="@drawable/shape"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal" >
    <Button android:text="@string/_1"
        android:id="@+id/button1"
        android:textSize="48sp"/>
    <Button android:text="@string/_2"
        android:id="@+id/button2"
        android:textSize="48sp"/>
    <Button android:text="@string/_3"
        android:id="@+id/button3"
        android:textSize="48sp"/>
    <Button android:text="@string/_4"
        android:id="@+id/button4"
        android:textSize="48sp"/>
    <Button android:text="@string/_5"
        android:id="@+id/button5"
        android:textSize="48sp"/>
    <Button android:text="@string/_6"
        android:id="@+id/button6"
        android:textSize="48sp"/>
    <Button android:text="@string/_7"
        android:id="@+id/button7"
        android:textSize="48sp"/>
    <Button android:text="@string/_8"
        android:id="@+id/button8"
        android:textSize="48sp"/>
    <Button android:text="@string/_9"
        android:id="@+id/button9"
        android:textSize="48sp"/>

    <Button android:visibility="invisible"/>

    <Button android:text="@string/_0"
        android:id="@+id/button0"
        android:textSize="48sp"/>

    <Button android:text="@string/delete"
            android:id="@+id/button_delete"
        android:textSize="48sp"/>
    </GridLayout>

</LinearLayout>